// ARQUIVO: tsconfig.json (VERS√ÉO CORRETA E COMPLETA)
{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    // A LINHA MAIS IMPORTANTE PARA RESOLVER SEU PROBLEMA:
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // A SEGUNDA LINHA MAIS IMPORTANTE:
    "allowJs": true,
    "strict": true
  }
}